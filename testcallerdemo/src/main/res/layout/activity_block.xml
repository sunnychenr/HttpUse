<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_block"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_blockLog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ll_blockListManagment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="拦截记录"
            android:textSize="20sp"
            android:textColor="#506dfd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_blockSetting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/ll_blockLog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="拦截设置"
            android:textSize="20sp"
            android:textColor="#506dfd"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_blockListManagment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="黑名单管理"
            android:textSize="20sp"
            android:textColor="#506dfd"/>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lionmobi.testcallerdemo">

    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <application
        android:name="com.lionmobi.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lionmobi.activity.BlockActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lionmobi.activity.BlockListActivity">
            <intent-filter>
                <action android:name="com.lionmobi.activity.BLOCKLISTACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lionmobi.activity.BlockLogActivity">
            <intent-filter>
                <action android:name="com.lionmobi.activity.BLOCKLOGACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.lionmobi.activity.BlockSettingActivity" >
            <intent-filter>
                <action android:name="com.lionmobi.activity.BLOCKSETTINGACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="com.lionmobi.activity.CallLogActivity" >
            <intent-filter>
                <action android:name="com.lionmobi.activity.CALLLOGACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="com.lionmobi.activity.ContactsActivity" >
            <intent-filter>
                <action android:name="com.lionmobi.activity.CONTACTSACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>